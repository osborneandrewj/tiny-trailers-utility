<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.tinytrailersutility.StatusFragment">

    <TextView
        android:id="@+id/tv_cash_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="45,000"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="45,000" />

    <TextView
        android:id="@+id/label_cash_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:text="$"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        app:layout_constraintBottom_toTopOf="@+id/tv_cash_total"
        app:layout_constraintRight_toLeftOf="@+id/tv_cash_total"
        app:layout_constraintTop_toBottomOf="@+id/tv_cash_total"
        app:layout_constraintVertical_bias="0.5"
        tools:text="$" />

    <Button
        android:id="@+id/btn_test_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/tv_cash_total"
        app:layout_constraintLeft_toRightOf="@+id/tv_cash_total"
        app:layout_constraintTop_toBottomOf="@+id/tv_cash_total" />
</android.support.constraint.ConstraintLayout>
